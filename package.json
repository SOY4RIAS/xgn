{
  "name": "xgn",
  "version": "0.1.0",
  "description": "`xgn` is a CLI, project generator",
  "main": "./lib/index.js",
  "bin": {
    "xgn": "./lib/index.js"
  },
  "scripts": {
    "start": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "clean":"rimraf lib",
    "create": "npm run build && npm run test",
    "prebuild": "npm run clean",
    "build": "tsc -p .",
    "test": "npm i -g && xgn",
    "refresh": "rm -rf ./node_modules ./package-lock.json && npm install"
  },
  "keywords": [
    "cli",
    "xgn",
    "project",
    "generator"
  ],
  "author": {
    "name": "Santiago Arias",
    "email": "sanx349@gmail.com",
    "url": "https://github.com/soy4rias"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/figlet": "^1.2.1",
    "@types/inquirer": "^7.3.1",
    "@types/listr": "^0.14.2",
    "@types/ncp": "^2.0.4",
    "@types/node": "^14.14.20",
    "eslint": "^7.17.0",
    "eslint-config-domix": "^0.1.1",
    "nodemon": "^2.0.6",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "arg": "^5.0.0",
    "chalk": "^4.1.0",
    "execa": "^5.0.0",
    "figlet": "^1.5.0",
    "gitignore": "^0.6.0",
    "inquirer": "^7.3.3",
    "listr": "^0.14.3",
    "ncp": "^2.0.0",
    "pkg-install": "^1.0.0",
    "rimraf": "^3.0.2",
    "yargs": "^16.2.0"
  }
}
